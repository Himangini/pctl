apiVersion: kustomize.toolkit.fluxcd.io/v1beta1
kind: Kustomization
metadata:
  name: {{.Name}}
  namespace: {{.Namespace}}
spec:
  path: {{.Spec.Path}}
  sourceRef:
    kind: {{.Spec.SourceRef.Kind}}
    name: {{.Spec.SourceRef.Name}}
    namespace: {{.Spec.SourceRef.Namespace}}
  prune: {{.Spec.Prune}}
  interval: {{.Spec.Interval.Duration}}
  targetNamespace: {{.Spec.TargetNamespace}}
